<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="com.byronkatz.reap"
    android:versionCode="2"
    android:versionName="1.01" >

    <uses-feature android:name="android.hardware.screen.portrait" />

    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />
    <!-- internet permission is needed if I want to send myself error reports,
    but instead I set it so they use email. -->
<!--     <uses-permission android:name="android.permission.INTERNET"  /> -->
<!-- external storage is only used when I am doing method tracing, as the trace dump is
put in the SD card -->
<!--     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="10" />

    <application
        android:name=".general.RealEstateAnalysisProcessorApplication"
        android:icon="@drawable/house"
        android:label="@string/app_name" >
        <activity
            android:name=".activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GraphActivity"
            android:label="@string/entryScreenActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".activity.RentalActivity"
            android:label="@string/rentalActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.DataPagesActivity"
            android:label="@string/dataPagesActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.AddressActivity"
            android:label="@string/addressActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.ConfigureDataTablesActivity"
            android:label="@string/configureDataTableTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.FinancialEnvironmentActivity"
            android:label="@string/financialEnvironmentActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.LoanActivity"
            android:label="@string/loanActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.SaleActivity"
            android:label="@string/saleActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.TaxesActivity"
            android:label="@string/taxesActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.SavedDataBrowserActivity"
            android:label="@string/savedDataBrowserActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.AppInfoActivity"
            android:label="@string/appInfoActivityTitleText"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>