<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/custom_background"
    >


<TableLayout 
    android:id="@+id/splashScreenLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="5dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/totalPurchaseValueSplashTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/totalPurchasePriceTitleText"
            android:textColor="@color/tf_green2" />

        <EditText
            android:id="@+id/splashScreenValueEntry"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:padding="10dip"
            android:text="$0" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="5dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/yearlyInterestRateTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/yearlyInterestRateTitleText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tf_green2" >
        </TextView>

        <EditText
            android:id="@+id/yearlyInterestRateEditText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:padding="10dip"
            android:text="0%" >
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="5dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="5dip" >

        <Spinner
            android:id="@+id/numOfCompoundingPeriodsSpinner"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:entries="@array/numOfCompoundingPeriodsArray" >
        </Spinner>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="5dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="5dip" >

        <CheckBox
            android:id="@+id/splashScreenRentCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splashScreenRentCheckBox" />
    </TableRow>

    <TableRow
        android:id="@+id/estimatedRentRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="5dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="5dip"
        android:visibility="invisible"
         >

        <TextView
            android:id="@+id/estimatedRentPaymentsTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/estimatedRentPaymentsTitleText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tf_green2" >
        </TextView>

        <EditText
            android:id="@+id/estimatedRentPaymentsEditText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:inputType="numberDecimal"
            android:text="$0"
            android:maxLength="20" >
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="10dip" >

        <Button
            android:id="@+id/splashScreenGoButton"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dip"
            android:layout_weight="0.5"
            android:background="@drawable/custom_button"
            android:padding="20dip"
            android:text="@string/go"
            android:textColor="@android:color/white"
            android:textSize="25dip" />

        <Button
            android:id="@+id/splashScreenSkipButton"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.5"
            android:background="@drawable/custom_button"
            android:padding="20dip"
            android:text="@string/skip"
            android:textColor="@android:color/white" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="@string/splashScreenNote" />
    </TableRow>


</TableLayout>
</ScrollView>