<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="20dip" android:layout_gravity="center_horizontal" android:id="@+id/overallLoadSavedValuesButtonLinearLayout">
            <Button 
            	android:layout_height="wrap_content" 
            	android:id="@+id/browseDatabaseButton" 
            	android:layout_width="wrap_content" 
            	android:text="@string/browseDatabaseButtonText" android:layout_gravity="center_horizontal" android:layout_margin="20dip"></Button>
            <Button 
            	android:layout_height="wrap_content" 
            	android:id="@+id/searchDatabaseButton" 
            	android:layout_width="wrap_content" 
            	android:text="@string/searchDatabaseButtonText" android:layout_gravity="center_horizontal" android:layout_margin="20dip"></Button>
        </LinearLayout>

    
</LinearLayout>
