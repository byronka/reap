<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dataPagesButtonsLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >

        <Button
            android:id="@+id/addressButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/addressActivityTitleText"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/loanButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/loanButtonText"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/taxesButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/taxesButtonText"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/saleButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/saleButtonText"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/financialEnvironmentButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/financialEnvironmentButtonText"
            android:textColor="@android:color/white" >
        </Button>

        <Button
            android:id="@+id/rentalButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/rentalButtonText"
            android:textColor="@android:color/white" >
        </Button>
    </LinearLayout>

</LinearLayout>