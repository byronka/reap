<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashScreenLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/custom_background" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/realEstateMarketAnalysisSplashPageDescription"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="10dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/totalPurchaseValueSplashTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/totalPurchasePriceTitleText"
            android:textColor="@color/light_blue" />

        <EditText
            android:id="@+id/splashScreenValueEntry"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:padding="20dip"
            android:text="$0.00" />

        <CheckBox
            android:id="@+id/splashScreenRentCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splashScreenRentCheckBox" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="10dip" >

        <Button
            android:id="@+id/splashScreenGoButton"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dip"
            android:layout_weight="0.5"
            android:background="@drawable/custom_button"
            android:padding="20dip"
            android:text="@string/go"
            android:textColor="@android:color/white"
            android:textSize="25dip" />

        <Button
            android:id="@+id/splashScreenSkipButton"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.5"
            android:background="@drawable/custom_button"
            android:padding="20dip"
            android:text="@string/skip"
            android:textColor="@android:color/white" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reapFeatureList" />
    </TableRow>

</TableLayout>