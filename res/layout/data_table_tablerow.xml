<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dataTableRowLayout">
	
	<TextView android:id="@+id/dataTablePropertyName"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="@color/data_table_row_text_color" android:padding="3dip" />

	<TextView android:id="@+id/dataTablePropertyValue"
		android:gravity="right" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="@color/data_table_row_text_color"
		android:padding="3dip" />
		
		<ToggleButton android:gravity="right" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:padding="3dip" android:visibility="gone" />

</TableRow>

