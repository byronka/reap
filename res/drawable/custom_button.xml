<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/tf_green1"
                android:endColor="@color/tf_green2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/gray60" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/tf_orange1"
                android:startColor="@color/tf_orange2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/gray60" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/tf_blue3"
                android:startColor="@color/tf_blue4"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/gray60" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
